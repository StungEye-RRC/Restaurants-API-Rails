<p id="notice"><%= notice %></p>

<h1>Measured Ingredients</h1>

<table>
  <thead>
    <tr>
      <th>Dish</th>
      <th>Ingredient</th>
      <th>Measurement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measured_ingredients.each do |measured_ingredient| %>
      <tr>
        <td><%= measured_ingredient.dish_id %></td>
        <td><%= measured_ingredient.ingredient_id %></td>
        <td><%= measured_ingredient.measurement_id %></td>
        <td><%= link_to 'Show', measured_ingredient %></td>
        <td><%= link_to 'Edit', edit_measured_ingredient_path(measured_ingredient) %></td>
        <td><%= link_to 'Destroy', measured_ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

